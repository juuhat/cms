extends layout

block content
	.contentItem
		.contentItemHeader
			|Add new page
		a(href="/manage/pages/0") Add page
	.contentItem
		.contentItemHeader
			|Current pages
		table
			thead
				tr
					th
						|Title
					th
						|Author
					th
						|Published
					th
						|Created
					th
						|Updated
			tbody
				if pages != null
					form(action='/manage/pages/remove', method='post')
						- each page in pages
							tr
								td
									=page.Title
								td
									=page.Username
								td
									if page.Published
										| Yes
									else
										| No
								td
									=page.Created
								td
									=page.Updated
								td
									a(href="/manage/pages/" + page.PageID) Edit
								td
									button(type='submit', name="id", value=page.PageID).
										Remove